{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom",
            "webworker"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "types": [
            "@types/node",
            "@types/jest"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true
    }
}
